          <option value="appart_b_neufgrange">Appart Hambach 2b rue de Neufgrange</option>
          <option value="appart_belvedere_strasbourg">Appart Belvedere Strasbourg</option>
          <option value="appart_oriels_nancy">Appart Oriels Nancy</option>
