      <p> <label for="cotenant_address">Adresse colocataire</label> : <input type="text" name="cotenant_address" id="cotenant_address" /> </p>
      <p> <label for="caution_name">Prénom Nom caution</label> : <input type="text" name="caution_name" id="caution_name" /> </p>
      <p> <label for="caution_address">Adresse caution</label> : <input type="text" name="caution_address" id="caution_address" /> </p>
      <p> <label for="landlord_name">*Prénom Nom propriétaire</label> : <input type="text" name="landlord_name" id="landlord_name" value="Christophe MEYER" required /> </p>
      <p> <label for="landlord_address">*Adresse propriétaire</label> : <input type="text" name="landlord_address" id="landlord_address" value="23 rue Saint Hubert, 57910 Hambach" required /> </p>

      <input type="submit" class="btn btn-lg btn-primary" value="Envoyer" />
   </form>

